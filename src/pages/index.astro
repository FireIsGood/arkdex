---
import MainLayout from "@layouts/MainLayout.astro";

const title = `Arkdex â–ª Home`;
const ogTitle = `Arkdex Home Page`;
---

<MainLayout title={title} ogTitle={ogTitle}>
  <section style="opacity: 0">
    <h1>Arkdex</h1>
    <p>A website by FireIsGood#0733. Created with Astro.</p>
    <p>This is generic text</p>
    <p>
      <a href="">This is link text</a>
    </p>
    <p class="grey">This is grey text</p>
    <hr />
    <h2>Tools:</h2>
    <ul class="tool-cards">
      <li><a href="/arkdex/operators">Operators</a></li>
    </ul>
  </section>
</MainLayout>

<style lang="scss">
  // Fix FOUC

  section {
    opacity: 1 !important;
  }

  // General Styles

  * + * {
    margin-top: 1rem;
  }

  h1 {
    text-align: center;
  }

  // Main Styles

  .grey {
    color: var(--theme-text-grey);
  }

  .tool-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(20ch, 1fr));
    justify-items: center;

    li {
      min-width: clamp(20ch, 50vw, 400px);
      padding: 1rem;
      text-align: center;
      background-color: var(--theme-card);
    }
  }
</style>
